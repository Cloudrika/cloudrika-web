{
  "name": "cloudrika-web",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:email-portal": "turbo dev --filter email-portal",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@storybook/nextjs": "^9.1.3",
    "@workspace/design-system": "workspace:*",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/tailwind-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint-plugin-storybook": "^9.1.3",
    "storybook": "^9.1.3",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@tailwindcss/oxide",
      "core-js-pure",
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide"
    ]
  }
}